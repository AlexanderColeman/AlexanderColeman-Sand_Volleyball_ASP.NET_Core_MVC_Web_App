@using SandVolleyballWebApp.ViewModels
@model List<UserViewModel>

  
<section class="bs-gray-dark d-flex justify-content-center align-items-center h-50 min-vh-50">
	<div class="container">
		<div class="row gy-2">
			@foreach (var item in Model)
			{	
				<div class=" col-lg-3 col-md-4">
					<div class="box bs-gray-dark h-100 d-flex p-4 flex-column text-white">
						<img src="@item.ProfileImageUrl" alt="User Picture" />
						<h6 class="mt-3 h-25" >@item.UserName</h6>
						<div class="btn-group mt-auto">
						            <a asp-controller="User" asp-action="Detail" asp-route-id="@item.Id" type="button" class=" mt-auto btn btn-sm btn-outline-secondary">View</a>
									@if (User.Identity.IsAuthenticated && User.IsInRole("admin")){

										<a asp-controller="Dashboard" asp-action="AdminEditUser" asp-route-id="@item.Id" type="button" class="mt-auto btn btn-sm btn-outline-secondary">Edit</a>
										<a asp-controller="User" asp-action="Delete" asp-route-id="@item.Id" type="button" class="mt-auto btn btn-sm btn-outline-secondary">Delete</a>

									}	
					    </div>	     
					</div>
				</div>
			}
		</div>
	</div>
</section>






