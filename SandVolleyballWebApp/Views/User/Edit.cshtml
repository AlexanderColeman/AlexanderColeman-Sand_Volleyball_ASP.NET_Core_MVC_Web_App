@using SandVolleyballWebApp.ViewModels
@model EditRoleViewModel

<div class="container">
	<main>
		<div class="row g-5">
			<div class="col-md-7 col-lg-8">
				@using (Html.BeginForm("EditPost", "User"))
				{
					@Html.HiddenFor(h => @Model.User.Id);
						<div class="row g-3">
							<div class="col-sm-6">
								<label asp-for="@Model.User.UserName" class="form-label">User name</label>
								<input asp-for="@Model.User.UserName" class="form-control" placeholder="" value="@Model.User.UserName" required="">
								<span asp-validation-for="@Model.User.UserName" class="text-danger">
								</span>
							</div>
							<div class="col-sm-6">
								<label asp-for="@Model.User.Email" class="form-label">Email</label>
								<input asp-for="@Model.User.Email" class="form-control" placeholder="" value="@Model.User.Email" required="">
								<span asp-validation-for="@Model.User.Email" class="text-danger">
								</span>
							</div>
							<hr class="my-4">

							<h4 class="mb-3">Roles</h4>
							<div class="my-3">
								@for(int i = 0; i < Model.Roles.Count; i++){
									<div>
										@Html.CheckBoxFor(c => Model.Roles[i].Selected)
										@Html.HiddenFor(x => Model.Roles[i].Value)

										@Html.LabelFor(l => Model.Roles[i].Selected, @Model.Roles[i].Text, new {@class="form-check-label"})
									    @Html.HiddenFor(x => Model.Roles[i].Text)
								    </div>
								}
							</div>
						</div>

							<hr class="my-4">

							<button class="w-100 btn btn-primary btn-lg" type="submit">Save</button>

				}
				
			</div>
		</div>
	</main>
</div>
